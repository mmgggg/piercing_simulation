<div class="container mx-auto">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2" style="margin-top: 70px;">
        <%= form_with url: login_path, method: :post, local: true do |f| %>
        <div class="form-group">
          <%= f.label :email, (t 'activerecord.attributes.user.email')%>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, (t 'activerecord.attributes.user.password') %>
          <%= f.password_field :password, class: 'form-control'%> 
        </div>
        <div class="actions">
          <%= f.submit "Login", class: "btn btn-primary"%>
        </div>
        <% end %>
      <div class='text-center' style="margin-top: 50px">
        <%= link_to "ユーザー登録はこちら", new_user_path, class: "btn btn-primary"%>
        <%= link_to "パスワードを忘れた",  new_password_reset_path %>
      </div>
    </div>
  </div>
</div>
